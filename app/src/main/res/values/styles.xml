<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="ActivityTitleStyle" parent="">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="NormalChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>

    <style name="LabelChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>

    <style name="CardTitleStyle" parent="">
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="CardDobStyle" parent="">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="CardDetailButtonStyle" parent="">
        <item name="android:backgroundTint">@color/backgroundPrimary</item>
        <item name="android:strokeColor">@color/backgroundPrimary</item>
    </style>

    <style name="CardDeleteButtonStyle" parent="">
        <item name="android:backgroundTint">@color/red</item>
        <item name="strokeColor">@color/backgroundPrimary</item>
    </style>

    <style name="FloatingButtonStyle" parent="">
        <item name="android:backgroundTint">@color/backgroundPrimary</item>
        <item name="tint">@color/textPrimary</item>
    </style>

</resources>